    <div class="nav-container">
        <div class="logo">
            <div class="hamburger" id="hamburger">
                <span></span>
                <span></span>
                <span></span>
            </div>
            Veltron
        </div>
        <nav class="nav-links">
            <a href="/">Home</a>
            <a href="/sale">SALE</a>
        </nav>
        <div class="header-right">
            <div class="search-bar">
                <input type="text" placeholder="What are you looking for...">
                <i class="fa-solid fa-magnifying-glass search-icon"></i>
            </div>
            <div class="header-icons">
                <a href="#" class="icon" aria-label="Wishlist"><i class="fa-regular fa-heart"></i></a>
                <a href="#" class="icon" aria-label="Cart"><i class="fa-solid fa-cart-shopping"></i></a>
                <a href="/profile" class="icon" aria-label="Profile"><i class="fa-regular fa-user"></i></a>
            </div>
