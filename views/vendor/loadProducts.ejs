<!-- Breadcrumb -->
<div class="breadcrumb">
    <a href="/dashboard">Dashboard</a>
    <span class="breadcrumb-separator">></span>
    <span>Products</span>
    <span class="breadcrumb-separator">></span>
</div>

<!-- Page Header -->
<div class="page-header">
    <h1 class="page-title">Products</h1>
    <div class="header-controls">
        <div class="search-box">
            <i class="fas fa-search"></i>
            <input type="text" placeholder="Search product..." value="<%= searchQuery || '' %>">
        </div>
        <div class="date-selector">
            <i class="far fa-calendar"></i>
            <span>Select Dates</span>
        </div>
        <button class="add-product-btn" onclick="addNewProduct()">
            <span>Add New Product</span>
            <i class="fas fa-plus"></i>
        </button>
    </div>
</div>

<!-- Filter Section -->
<div class="filter-section">
    <div class="filters">
        <div class="filter-group">
            <div class="filter-label">Filter By</div>
        </div>
        <div class="filter-group">
            <select class="filter-dropdown" name="category">
                <option value="">Product Category</option>
                <option value="mechanical" <%=category==='mechanical' ? 'selected' : '' %>>Mechanical</option>
                <option value="automatic" <%=category==='automatic' ? 'selected' : '' %>>Automatic</option>
                <option value="quartz" <%=category==='quartz' ? 'selected' : '' %>>Quartz</option>
            </select>
        </div>
        <div class="filter-group">
            <select class="filter-dropdown" name="price">
                <option value="">Price</option>
                <option value="low">Low to High</option>
                <option value="high">High to Low</option>
            </select>
        </div>
    </div>

    <div class="sort-controls">
        <span class="sort-label">Sort</span>
        <button class="sort-btn <%= sortBy === 'price-high' ? 'active' : '' %>">Price High-Low</button>
        <button class="sort-btn <%= sortBy === 'price-low' ? 'active' : '' %>">Price Low-High</button>
        <button class="sort-btn <%= sortBy === 'recent' ? 'active' : '' %>">Last added first</button>
    </div>
</div>

