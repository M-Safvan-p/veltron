<div class="vendor-page">
  <div class="vendor-container">
    <div class="breadcrumb">
      <a href="/admin/dashboard">dashboard</a>
      <span class="breadcrumb-separator">></span>
      <span>orders</span>
    </div>

    <div class="page-header">
      <h1 class="page-title">Orders Management</h1>
      <p class="page-subtitle">Manage and track all your product orders</p>
    </div>

    <section class="orders-section">
      <div class="orders-controls">
        <div class="search-controls">
          <div class="control-group">
            <label for="search" class="control-label">Search:</label>
            <div class="search-box">
              <i class="fas fa-search"></i>
              <input type="text" id="search" placeholder="Search by Order ID..." 
                  value="<%= search || '' %>" onkeyup="debounceSearch()">
            </div>
          </div>
        </div>

        <div class="other-controls">
          <div class="control-group">
            <label for="sort" class="control-label">Sort by:</label>
            <select id="sort" onchange="applyFilters()">
              <option value="newest" <%=sort==='newest' ? 'selected' : '' %>>Newest</option>
              <option value="oldest" <%=sort==='oldest' ? 'selected' : '' %>>Oldest</option>
            </select>
          </div>
          
          <div class="control-group">
            <label for="vendors" class="control-label">Vendors:</label>
            <select id="vendors" onchange="applyFilters()">
              <option value="">All</option>
              <% vendors.forEach(vendor=> { %>
              <option value="<%= vendor._id %>" <%=selectedVendor==vendor._id ? 'selected' : '' %>>
                <%= vendor.brandName %>
              </option>
              <% }); %>
            </select>
          </div>
          
          <div class="control-group">
            <label for="status" class="control-label">Status:</label>
            <select id="status" onchange="applyFilters()">
              <option value="">All</option>
              <option value="processing" <%=status==='processing' ? 'selected' : '' %>>Processing</option>
              <option value="shipped" <%=status==='shipped' ? 'selected' : '' %>>Shipped</option>
              <option value="completed" <%=status==='completed' ? 'selected' : '' %>>Completed</option>
              <option value="cancelled" <%=status==='cancelled' ? 'selected' : '' %>>Cancelled</option>
            </select>
          </div>
        </div>
      </div>
      
      <% if (orders && orders.length> 0) { %>
      <div class="table-container">
        <table class="orders-table">
          <thead>
            <tr>
              <th>Order ID</th>
              <th>Product</th>
              <th>Vendor</th>
              <th>Date</th>
              <th>Customer</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% orders.forEach(order=> { %>
            <tr class="order-row">
              <td class="order-id-cell">
                <span class="order-id">#<%= order.orderId.substring(0, 10) %></span>
              </td>

              <td class="product-cell">
                <% if (order.products && order.products.length> 0) { %>
                <% const firstProduct=order.products[0]; %>
                <div class="product-info">
                  <div class="product-image">
                    <img src="<%= firstProduct.image %>" alt="<%= firstProduct.name %>" onerror="this.src='/images/default-product.jpg'">
                  </div>
                  <div class="product-details">
                    <p class="product-name">
                      <%= firstProduct.name %>
                    </p>
                    <% if (order.products.length> 1) { %>
                    <p class="product-meta">+ <%= order.products.length - 1 %> more items</p>
                    <% } %>
                  </div>
                </div>
                <% } %>
              </td>

              <td class="vendor-cell">
                <% if (order.products && order.products.length> 0) { %>
                <% const firstVendor=order.products[0].vendorId; %>
                <p class="vendor-name">
                  <%= firstVendor.brandName || firstVendor.name %>
                </p>
                <% } %>
              </td>

              <td class="date-cell">
                <span class="order-date">
                  <%= new Date(order.invoiceDate).toLocaleDateString('en-IN', { day: '2-digit', month: 'short', year: 'numeric' }) %>
                </span>
              </td>

              <td class="customer-cell">
                <div class="customer-info">
                  <p class="customer-name">
                    <%= order.shippingAddress.fullName %>
                  </p>
                  <p class="customer-location">
                    <%= order.shippingAddress.city %>, <%= order.shippingAddress.state %>
                  </p>
                </div>
              </td>

              <td class="status-cell">
                <span class="status-badge status-<%= order.orderStatus %>">
                  <%= order.orderStatus.charAt(0).toUpperCase() + order.orderStatus.slice(1) %>
                </span>
              </td>

              <td class="action-cell">
                <a href="/admin/orders/<%= order.orderId %>" class="action-button" title="View Order Details">
                  View
                </a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <div class="cards-container">
        <% orders.forEach(order=> { %>
        <% order.products.forEach((product, productIndex)=> { %>
        <div class="order-card">
          <div class="card-header">
            <div class="order-info">
              <p class="order-id">#<%= order.orderId.substring(0, 10) %></p>
              <p class="order-date">
                <%= new Date(order.invoiceDate).toLocaleDateString('en-IN', { day: '2-digit', month: 'short', year: 'numeric' }) %>
              </p>
            </div>
            <span class="status-badge status-<%= order.orderStatus %>">
              <%= order.orderStatus.charAt(0).toUpperCase() + order.orderStatus.slice(1) %>
            </span>
          </div>

          <div class="card-content">
            <div class="product-info">
              <div class="product-image">
                <img src="<%= product.image %>" alt="<%= product.name %>" onerror="this.src='/images/default-product.jpg'">
              </div>
              <div class="product-details">
                <p class="product-name">
                  <%= product.name %>
                </p>
                <p class="product-meta">Qty: <%= product.quantity %> | Color: <%= product.selectedColor %></p>
              </div>
            </div>

            <div class="customer-info">
              <p class="customer-label">Customer:</p>
              <p class="customer-name">
                <%= order.shippingAddress.fullName %>
              </p>
              <p class="customer-location">
                <%= order.shippingAddress.city %>, <%= order.shippingAddress.state %>
              </p>
            </div>
          </div>

          <div class="card-actions">
            <a href="/admin/orders/<%= order.orderId %>" class="view-details-button">
              View Details
            </a>
          </div>
        </div>
        <% }) %>
        <% }) %>
      </div>
      <% } else { %>
      <div class="empty-orders">
        <div class="empty-orders-icon">ðŸ“‹</div>
        <h3 class="empty-title">No Orders Yet</h3>
        <p class="empty-message">Orders for your products will appear here once customers start purchasing.</p>
      </div>
      <% } %>

      <% if (orders && orders.length> 0) { %>
      <div class="pagination">
        <div class="pagination-info">
          Showing <%= ((currentPage - 1) * 10) + 1 %>-<%= ((currentPage - 1) * 10) + orders.length %> of <%=
                            totalOrders || 0 %> orders
        </div>
        <div class="pagination-controls">
          <button class="pagination-btn" <%=currentPage==1 ? 'disabled aria-disabled="true"' : '' %> onclick="changePage(<%= currentPage - 1 %>)" aria-label="Previous page">
            <i class="fas fa-chevron-left" aria-hidden="true"></i>
          </button>
          <% for (let i=1; i <=totalPages; i++) { %>
          <button class="pagination-btn <%= i === currentPage ? 'active' : '' %>" aria-current="<%= i === currentPage ? 'page' : 'false' %>" onclick="changePage(<%= i %>)" aria-label="Page <%= i %>">
            <%= i %>
          </button>
          <% } %>
          <button class="pagination-btn" <%=currentPage==totalPages ? 'disabled aria-disabled="true"' : '' %> onclick="changePage(<%= currentPage + 1 %>)" aria-label="Next page">
            <i class="fas fa-chevron-right" aria-hidden="true"></i>
          </button>
        </div>
      </div>
      <% } %>
    </section>
  </div>
</div>

<script>
  let searchTimeout; 
  function debounceSearch() {
    clearTimeout(searchTimeout);
    searchTimeout = setTimeout(handleSearch, 1000);
  }

  function handleSearch() {
    const searchValue = document.getElementById('search').value;
    const url = new URL(window.location);
    if (searchValue) {
      url.searchParams.set('search', searchValue);
    } else {
      url.searchParams.delete('search');
    }
    url.searchParams.set('page', 1);
    window.location.href = url.href;
  }

  function changePage(page) {
    const url = new URL(window.location.href);
    url.searchParams.set("page", page);

    const sort = document.getElementById("sort")?.value;
    const status = document.getElementById("status")?.value;
    const search = document.getElementById("search")?.value;

    if (sort) url.searchParams.set("sort", sort);
    if (status) url.searchParams.set("status", status);
    if (search) url.searchParams.set("search", search);
    window.location.href = url.toString();
  }

  function applyFilters() {
    const sort = document.getElementById("sort").value;
    const status = document.getElementById("status").value;
    const vendors = document.getElementById("vendors").value;
    const search = document.getElementById("search").value;
    const url = new URL(window.location.href);

    url.searchParams.set("page", 1);
    url.searchParams.set("sort", sort);

    if (status) {
      url.searchParams.set("status", status);
    } else {
      url.searchParams.delete("status");
    }

    if (vendors) {
      url.searchParams.set("vendor", vendors);
    } else {
      url.searchParams.delete("vendor");
    }

    if (search) {
      url.searchParams.set("search", search);
    } else {
      url.searchParams.delete("search");
    }

    window.location.href = url.toString();
  }
</script>