<script>
    async function handleFormSubmit(event) {
        event.preventDefault();

        const form = document.getElementById('contact-form');
        const statusDiv = document.getElementById('form-status');
        const submitBtn = document.getElementById('submit-btn');

        // Reset status message
        statusDiv.textContent = '';
        statusDiv.classList.remove('success', 'error');

        // Collect data
        const fullName = document.getElementById('fullName').value.trim();
        const email = document.getElementById('email').value.trim();
        const subject = document.getElementById('subject').value.trim();
        const message = document.getElementById('message').value.trim();

        // Basic validation
        // if (!fullName || !email || !subject || !message) {
        //     return showStatus('Please fill in all fields.', 'error');
        // }

        // if (fullName.length < 2) {
        //     return showStatus('Name must be at least 2 characters.', 'error');
        // }

        // if (message.length < 10) {
        //     return showStatus('Message must be at least 10 characters.', 'error');
        // }

        // Disable button while sending
        submitBtn.disabled = true;
        submitBtn.textContent = 'Sending...';

        try {
            // Send request with Axios
            const response = await axios.post("/contact/submit", {
                fullName,
                email,
                subject,
                message,
            });

            if (response.data.success) {
                showStatus("Message sent successfully! We'll get back to you soon.", 'success');
                form.reset();
            }
        } catch (error) {
            let errorMsg = error.response.data.message || "Error sending message. Please try again later.";
            console.error(error);
            errorMsg = errorMsg.split(/<br\s*\/?>/gi).join(', ');
            showStatus(errorMsg, 'error');
        } finally {
            submitBtn.disabled = false;
            submitBtn.textContent = 'Send Message';
        }
    }

    // Helper to show messages
    function showStatus(message, type) {
        const statusDiv = document.getElementById('form-status');
        statusDiv.textContent = message;
        statusDiv.classList.add(type);
        statusDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    }
</script>