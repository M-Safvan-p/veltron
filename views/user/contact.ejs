        border-left: 4px solid #212529;
        margin-bottom: 20px;
    }

    .info-card:last-child {
        margin-bottom: 0;
    }

    .info-header {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 12px;
    }

    .info-icon {
        font-size: 24px;
        color: #212529;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .info-card h3 {
        font-size: 16px;
        font-weight: 600;
        color: #212529;
        margin: 0;
    }

    .info-card p,
    .info-card a {
        font-size: 14px;
        color: #495057;
        line-height: 1.6;
        margin: 8px 0 0 0;
    }

    .info-card a {
        color: #212529;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.2s ease;
    }

    .info-card a:hover {
        color: #6c757d;
        text-decoration: underline;
    }

    /* Map Container */
    .map-container {
        margin-top: 30px;
        border-radius: 10px;
        overflow: hidden;
        height: 280px;
    }

    .map-container iframe {
        width: 100%;
        height: 100%;
        border: none;
    }

    /* Status Messages (for form feedback) */
