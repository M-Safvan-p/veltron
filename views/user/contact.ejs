        padding: 12px 16px;
        border-radius: 8px;
        margin-bottom: 16px;
        font-size: 14px;
        display: none;
    }

    .status-message.success {
        background: #d1f7e1;
        color: #146c43;
        border: 1px solid #a8e5c0;
        display: block;
    }

    .status-message.error {
        background: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
        display: block;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .hero-title {
            font-size: 36px;
        }

