<style>
    .main-content {
        background-color: white;
        width: 100%;
        min-height: 100vh;
        padding: 20px;
    }

    .profile-page {
        display: flex;
        gap: 30px;
        align-items: flex-start;
        max-width: 1200px;
        margin: 0 auto;
    }

    .sidebar {
        flex-shrink: 0;
    }

    .profile-container {
        flex: 1;
        max-width: 800px;
        width: 100%;
        margin: 0;
        padding: 18px;
    }

    .breadcrumb {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 25px;
        font-size: 14px;
        color: #6c757d;
    }

    .breadcrumb a {
        color: #6c757d;
        text-decoration: none;
        transition: color 0.2s ease;
    }

    .breadcrumb a:hover {
        color: #212529;
    }

    .breadcrumb-separator {
        color: #adb5bd;
    }

    .welcome-section {
        text-align: center;
        margin-bottom: 25px;
    }

    .welcome-title {
        font-size: 22px;
        color: #212529;
        font-weight: 400;
        letter-spacing: 0.5px;
    }

    .form-container {
        background: white;
        border-radius: 14px;
        padding: 30px;
        box-shadow: 0 4px 18px rgba(0, 0, 0, 0.08);
        border: 1px solid #e9ecef;
    }

    .form-section {
        margin-bottom: 30px;
    }

    .section-title {
        font-size: 18px;
        color: #212529;
        font-weight: 500;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 1px solid #e9ecef;
    }

    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        margin-bottom: 20px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
    }

    .form-group.full-width {
        grid-column: 1 / -1;
    }

    .form-label {
        font-size: 14px;
        color: #495057;
        font-weight: 500;
        margin-bottom: 8px;
        text-transform: capitalize;
    }

    .form-input {
        padding: 12px 16px;
        border: 1px solid #e9ecef;
        border-radius: 8px;
        font-size: 14px;
        background: #f8f9fa;
        color: #495057;
        transition: all 0.2s ease;
    }

    .form-input:focus {
        outline: none;
        border-color: #212529;
        background: white;
        box-shadow: 0 0 0 3px rgba(33, 37, 41, 0.1);
    }

    .form-input::placeholder {
        color: #adb5bd;
        font-size: 13px;
    }

    .textarea-input {
        min-height: 80px;
        resize: vertical;
        font-family: inherit;
    }

    .radio-group {
        display: flex;
        gap: 15px;
        margin-top: 5px;
    }

    .radio-option {
        display: flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
        padding: 8px 12px;
        border-radius: 6px;
        transition: background-color 0.2s ease;
    }

    .radio-option:hover {
        background: #f8f9fa;
    }

    .radio-option input[type="radio"] {
        margin: 0;
        accent-color: #212529;
        cursor: pointer;
    }

    .radio-text {
        font-size: 14px;
        color: #495057;
        font-weight: 400;
        cursor: pointer;
    }

    .radio-option input[type="radio"]:checked+.radio-text {
        color: #212529;
        font-weight: 500;
    }

    .form-buttons {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 30px;
        padding-top: 25px;
        border-top: 1px solid #e9ecef;
    }

    .cancel-btn,
    .submit-btn {
        padding: 12px 30px;
        border-radius: 7px;
        font-size: 14px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        border: none;
        text-decoration: none;
        display: inline-block;
        text-align: center;
        min-width: 120px;
    }

    .cancel-btn {
        background: #6c757d;
        color: white;
    }

    .cancel-btn:hover {
        background: #5a6268;
        transform: translateY(-1px);
    }

    .submit-btn {
        background: #212529;
        color: white;
    }

    .submit-btn:hover {
        background: #495057;
        transform: translateY(-1px);
    }

    .submit-btn:disabled {
        background: #adb5bd;
        cursor: not-allowed;
        transform: none;
    }

    .error-message {
        color: #dc3545;
        font-size: 12px;
        margin-top: 5px;
        display: none;
    }

    .success-message {
        background: #d4edda;
        color: #155724;
        padding: 12px 16px;
        border-radius: 8px;
        margin-bottom: 20px;
        border: 1px solid #c3e6cb;
        display: none;
    }

    @media (max-width: 640px) {
        .profile-container {
            padding: 12px;
        }

        .form-container {
            padding: 20px;
            border-radius: 11px;
        }

        .welcome-title {
            font-size: 20px;
        }

        .form-grid {
            grid-template-columns: 1fr;
            gap: 15px;
        }

        .profile-page {
            flex-direction: column;
            gap: 20px;
        }

        .sidebar .profile-sidebar {
            width: 100%;
        }

        .breadcrumb {
            font-size: 13px;
        }

        .form-buttons {
            flex-direction: column;
            gap: 10px;
        }

        .cancel-btn,
        .submit-btn {
            width: 100%;
        }

        .radio-group {
            flex-direction: column;
            gap: 10px;
        }

        .radio-option {
            padding: 10px;
            border: 1px solid #e9ecef;
            border-radius: 6px;
        }
    }

    .profile-page .profile-sidebar {
        position: static !important;
        left: auto !important;
        width: 320px;
        height: fit-content;
        border-radius: 16px;
        overflow: hidden;
        transform: none !important;
    }
</style>

<div class="profile-page">
    <aside class="sidebar">
        <%- include('../partials/user/sidebar') %>
    </aside>
    <div class="profile-container">
        <div class="breadcrumb">
            <a href="/profile">Profile</a>
            <span class="breadcrumb-separator">></span>
            <a href="/profile/address">delivery addresses</a>
            <span class="breadcrumb-separator">></span>
            <span>Edit Address</span>
        </div>

        <div class="welcome-section">
            <h1 class="welcome-title">Edit Address</h1>
        </div>

        <div class="form-container">
            <form id="editAddressForm">
                <div class="form-section">
                    <h2 class="section-title">Personal Information</h2>

                    <div class="form-grid">
                        <div class="form-group">
                            <label class="form-label" for="fullName">Full Name</label>
                            <input type="text" id="fullName" name="fullName" class="form-input"
                                value="<%= address.fullName %>" >
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="email">Email</label>
                            <input type="email" id="email" name="email" class="form-input"
                                value="<%= address.email %>" >
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <div class="form-group full-width">
                        <label class="form-label" for="fullAddress">Address</label>
                        <textarea id="fullAddress" name="fullAddress" class="form-input textarea-input"
                            ><%= address.fullAddress %></textarea>
                    </div>

                    <div class="form-grid">
                        <div class="form-group">
                            <label class="form-label" for="district">District</label>
                            <input type="text" id="district" name="district" class="form-input"
                                value="<%= address.district %>" >
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="state">State</label>
                            <input type="text" id="state" name="state" class="form-input"
                                value="<%= address.state %>" >
                        </div>
                    </div>

                    <div class="form-grid">
                        <div class="form-group">
                            <label class="form-label" for="city">City</label>
                            <input type="text" id="city" name="city" class="form-input"
                                value="<%= address.city %>" >
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="pincode">Pin Code</label>
                            <input type="text" id="pincode" name="pincode" class="form-input"
                                value="<%= address.pincode %>" pattern="[0-9]{6}" >
                        </div>
                    </div>

                    <div class="form-grid">
                        <div class="form-group">
                            <label class="form-label">Address Type</label>
                            <div class="radio-group">
                                <label class="radio-option">
                                    <input type="radio" name="type" value="Home" <%= address.type === 'Home' ? 'checked' : '' %>>
                                    <span class="radio-text">Home</span>
                                </label>
                                <label class="radio-option">
                                    <input type="radio" name="type" value="Work" <%= address.type === 'Work' ? 'checked' : '' %>>
                                    <span class="radio-text">Work</span>
                                </label>
                                <label class="radio-option">
                                    <input type="radio" name="type" value="Other" <%= address.type === 'Other' ? 'checked' : '' %>>
                                    <span class="radio-text">Other</span>
                                </label>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="phone">Phone Number</label>
                            <input type="tel" id="phone" name="phone" class="form-input"
                                value="<%= address.phone %>" pattern="[+]?[0-9\s-]+" >
                        </div>
                    </div>
                </div>

                <div class="form-buttons">
                    <a href="/profile/address/" class="cancel-btn">Cancel</a>
                    <button type="submit" class="submit-btn" id="submitBtn">Update Address</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById('editAddressForm').addEventListener('submit', async function (e) {
        e.preventDefault();

        const submitBtn = document.getElementById('submitBtn');
        submitBtn.disabled = true;
        submitBtn.textContent = 'UPDATING...';

        try {
            const formData = new FormData(this);
            const addressData = Object.fromEntries(formData);

            const addressId = '<%= address._id %>';

            const response = await axios.put(`/profile/address/edit/${addressId}`, addressData);

            Swal.fire({
                icon: 'success',
                title: 'Success!',
                text: response.data.message || 'Address updated successfully.',
                confirmButtonText: 'OK',
                customClass: {
                    confirmButton: "swal-confirm-black"
                }
            }).then(() => {
                window.location.href = '/profile/address';
            });

        } catch (error) {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                html: error.response?.data?.message || 'Failed to update address. Please try again.',
                confirmButtonText: 'OK'
            });
        } finally {
            submitBtn.disabled = false;
            submitBtn.textContent = 'UPDATE ADDRESS';
        }
    });
</script>
