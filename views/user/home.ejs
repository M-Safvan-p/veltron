<link rel="stylesheet" href="../../styles/user/home.css">
<!-- Hero Section -->
<section class="hero">
    <div class="hero-overlay"></div>
    <div class="hero-content container">
        <h1>Luxury Watches</h1>
        <p>Discover timeless elegance crafted with precision.</p>
    </div>
</section>

<!-- New Arrivals -->
<section class="new-arrivals">
    <div class="container">
        <h2 class="section-title">New Arrivals</h2>
        <div class="products-grid">
            <% newArrivals.forEach(function(product) { %>
                <a href="/product/<%= product._id %>" class="product-link">
                    <div class="product-card">
                        <img src="<%= product.variants[0].images[0].url %>" alt="<%= product.name %>" />
                        <h3 class="product-name">
                            <%= product.name %>
                        </h3>
                        <div class="product-price">
                            ₹<%= product.discountedPrice ? product.discountedPrice.toFixed(2) :
                                product.price.toFixed(2) %>
                                <% if (product.discountedPrice) { %>
                                    <span class="original-price">₹<%= product.price.toFixed(2) %></span>
                                    <% } %>
                        </div>
                    </div>
                </a>
                <% }); %>
        </div>
    </div>
</section>

