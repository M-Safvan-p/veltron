<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Log In</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet" />
  <link rel="stylesheet" href="../../styles/user/logIn.css">
</head>

<body>
  <div class="login-container">
    <h2 class="text-center">Log In</h2>

    <form action="/login" method="POST" id="logInForm">
      <!-- Email -->
      <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="you@example.com" />
      </div>

      <!-- Password -->
      <div class="mb-2">
        <label for="password" class="form-label">Password</label>
        <div class="password-field">
          <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" />
          <button type="button" class="password-toggle" onclick="togglePassword('password')">
            <i class="bi bi-eye-slash" id="password-eye"></i>
          </button>
        </div>
        <div class="form-text-right mt-1">
          <a href="/forgotPassword">Forgot password?</a>
        </div>
      </div>

      <!-- Login Button -->
      <button type="submit" class="btn btn-primary mt-3 mb-2">Log in</button>

      <!-- Signup Link -->
      <div class="login-footer mb-2">
        New user? <a href="/signup">Sign up</a>
      </div>

      <!-- Divider -->
      <div class="d-flex align-items-center divider">
        <span>Or Login with</span>
      </div>

      <!-- Google Button -->
      <button type="button" class="btn btn-outline-secondary" onclick="loginWithGoogle()">
        <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google" class="google-icon" />
        Google
      </button>
    </form>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <!--Swal alert-->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <!--Form validation-->
  <script type="module">
    //form validation 
    import { validateLogInForm } from "/js/utils/formValidator.js"
    document.addEventListener("DOMContentLoaded", () => {
      const form = document.getElementById("logInForm");

      form.addEventListener("submit", (e) => {
        e.preventDefault();

        const data = {
          email: document.getElementById("email").value,
          password: document.getElementById("password").value
        }

        const { isValid, messages } = validateLogInForm(data);

        if (!isValid) {
          Swal.fire({
            icon: 'error',
            title: 'Validation Error',
            html: messages.join("<br>"),
            confirmButtonText: 'OK',
            customClass: {
              confirmButton: 'swal-confirm-black'
            }
          });
        } else {
          form.submit();
        }
      })
    })
  </script>
  <script >
    function togglePassword(fieldId) {
      const passwordInput = document.getElementById(fieldId);
      const icon = document.getElementById(fieldId + '-eye');

      if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        icon.className = 'bi bi-eye';
      } else {
        passwordInput.type = 'password';
        icon.className = 'bi bi-eye-slash';
      }
    }

    function loginWithGoogle() {
      // Implement Google login logic here
      alert('Login with Google clicked');
    }
  </script>
</body>

</html>