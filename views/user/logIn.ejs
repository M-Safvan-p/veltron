<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Log In</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- SweetAlert2 -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <!-- Axios -->
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <!-- Custom CSS -->
  <link rel="stylesheet" href="../../styles/user/logIn.css" />
</head>

<body>
  <div class="login-container">
    <h2 class="text-center mb-4">Log In</h2>

    <form id="logInForm">
      <!-- Email -->
      <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input type="text" class="form-control" id="email" name="email" placeholder="you@example.com" />
      </div>

      <!-- Password -->
      <div class="mb-2">
        <label for="password" class="form-label">Password</label>
        <div class="password-field">
          <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password"
            value="@Safvan9633" />
        </div>
        <div class="form-text-right mt-1">
          <a href="/forgotPassword">Forgot password?</a>
        </div>
      </div>

      <!-- Login Button -->
      <button type="submit" class="btn btn-primary mt-3 mb-2 w-100">Log in</button>

      <!-- Signup Link -->
      <div class="login-footer mb-2 text-center">
        New user? <a href="/signUp">Sign up</a>
      </div>

      <!-- Divider -->
      <div class="d-flex align-items-center divider my-3">
        <hr class="flex-grow-1">
        <span class="px-2">Or Login with</span>
        <hr class="flex-grow-1">
      </div>

      <!-- Google Button -->
      <button type="button" class="btn btn-outline-secondary w-100" onclick="loginWithGoogle()">
        <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google" class="google-icon"
          width="20" />
        Google
      </button>
    </form>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Validation Script -->
  <script src="/js/utils/formValidator.js"></script>
  <script>
    document.getElementById("logInForm").addEventListener("submit", async (e)=> {
      e.preventDefault(); // Prevent normal form submission

      const email = document.getElementById("email").value.trim();
      const password = document.getElementById("password").value.trim();
      //forntend validation
      const { isValid, messages } = validateLogInForm(email, password);
      if (!isValid) {
        Swal.fire({
          icon: 'error',
          title: 'Validation Error',
          html: messages.join('<br>'),
          customClass: {
            confirmButton: "swal-confirm-black"
          }
        });
        return;
      }
      //data send
      try {
        const response = await axios.post("/logIn", { email, password });

        Swal.fire({
          icon: 'success',
          title: 'Login Successful',
          text: 'Redirecting...',
          timer: 1500,
          showConfirmButton: false,
          customClass: { confirmButton: "swal-confirm-black" }
        }).then(() => window.location.replace(response.data.redirectUrl));

      } catch (error) {

        Swal.fire({
          icon: 'error',
          title: 'Login Failed',
          text: error?.response?.data?.message || 'Invalid credentials',
          confirmButtonText: 'OK',
          customClass: { confirmButton: "swal-confirm-black" }
        });
      }
    });

    function loginWithGoogle() {

      window.location.href = "/auth/google";

      // Swal.fire({
      //   icon: 'info',
      //   title: 'Google Login',
      //   text: 'Google login feature coming soon!'
      // });
    }
  </script>
</body>

</html>