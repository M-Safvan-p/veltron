<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.3.4/axios.min.js"></script>

<style>
    .main-content {
        background-color: white;
        width: 100%;
        min-height: 100vh;
        padding: 20px;
    }

    .profile-page {
        display: flex;
        gap: 30px;
        align-items: flex-start;
        max-width: 1200px;
        margin: 0 auto;
    }

    .sidebar {
        flex-shrink: 0;
    }

    .profile-container {
        flex: 1;
        max-width: 800px;
        width: 100%;
        margin: 0;
        padding: 18px;
    }

    .breadcrumb {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 25px;
        font-size: 14px;
        color: #6c757d;
    }

    .breadcrumb a {
        color: #6c757d;
        text-decoration: none;
        transition: color 0.2s ease;
    }

    .breadcrumb a:hover {
        color: #212529;
    }

    .breadcrumb-separator {
        color: #adb5bd;
    }

    .welcome-section {
        text-align: center;
        margin-bottom: 25px;
    }

    .welcome-title {
        font-size: 22px;
        color: #212529;
        font-weight: 400;
        letter-spacing: 0.5px;
    }

    .address-container {
        background: white;
        border-radius: 14px;
        padding: 30px;
        box-shadow: 0 4px 18px rgba(0, 0, 0, 0.08);
        border: 1px solid #e9ecef;
    }

    .addresses-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .address-card {
        background: #f8f9fa;
        border: 1px solid #e9ecef;
        border-radius: 10px;
        padding: 20px;
        position: relative;
        transition: all 0.2s ease;
    }

    .address-card:hover {
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .address-header {
        display: flex;
        justify-content: between;
        align-items: flex-start;
        margin-bottom: 12px;
    }

    .address-name {
        font-size: 16px;
        font-weight: 600;
        color: #212529;
        margin-bottom: 4px;
    }

    .address-type {
        font-size: 12px;
        color: #6c757d;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .address-details {
        color: #495057;
        font-size: 14px;
        line-height: 1.5;
        margin-bottom: 15px;
    }

    .address-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .default-badge {
        background: #212529;
        color: white;
        font-size: 10px;
        padding: 4px 8px;
        border-radius: 4px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-weight: 500;
    }

    .address-buttons {
        display: flex;
        gap: 8px;
    }

    .edit-btn,
    .delete-btn {
        background: none;
        border: none;
        cursor: pointer;
        padding: 6px;
        border-radius: 4px;
        transition: all 0.2s ease;
    }

    .edit-btn {
        color: #6c757d;
    }

    .edit-btn:hover {
        background: #e9ecef;
        color: #212529;
    }

    .delete-btn {
        background: #212529;
        color: white;
        font-size: 10px;
        padding: 6px 12px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-weight: 500;
    }

    .delete-btn:hover {
        background: #495057;
    }

    .add-address-section {
        text-align: center;
    }

    .add-address-btn {
        background: #212529;
        color: white;
        border: none;
        padding: 14px 35px;
        border-radius: 7px;
        font-size: 14px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        text-decoration: none;
        display: inline-block;
    }

    .add-address-btn:hover {
        background: #495057;
        transform: translateY(-1px);
    }

    .edit-icon {
        width: 16px;
        height: 16px;
    }

    @media (max-width: 640px) {
        .profile-container {
            padding: 12px;
        }

        .address-container {
            padding: 20px;
            border-radius: 11px;
        }

        .welcome-title {
            font-size: 20px;
        }

        .addresses-grid {
            grid-template-columns: 1fr;
        }

        .profile-page {
            flex-direction: column;
            gap: 20px;
        }

        .sidebar .profile-sidebar {
            width: 100%;
        }

        .breadcrumb {
            font-size: 13px;
        }

        .address-actions {
            flex-direction: column;
            align-items: flex-start;
            gap: 10px;
        }
    }

    .profile-page .profile-sidebar {
        position: static !important;
        left: auto !important;
        width: 320px;
        height: fit-content;
        border-radius: 16px;
        overflow: hidden;
        transform: none !important;
    }
</style>

<div class="profile-page">
    <aside class="sidebar">
        <%- include('../partials/user/sidebar') %>
    </aside>
    <div class="profile-container">
        <div class="breadcrumb">
            <a href="/profile">Profile</a>
            <span class="breadcrumb-separator">></span>
            <span>delivery addresses</span>
        </div>

        <div class="welcome-section">
            <h1 class="welcome-title">Delivery Address</h1>
        </div>

        <div class="address-container">
            <div class="addresses-grid">
                <% if (addresses && addresses.length> 0) { %>
                    <% addresses.forEach(doc=> { %>
                        <% doc.address.forEach(addr=> { %>
                            <div class="address-card">
                                <div class="address-header">
                                    <div>
                                        <div class="address-name">
                                            <%= addr.fullName %>
                                        </div>
                                        <div class="address-type">
                                            <%= addr.type || 'Home' %>
                                        </div>
                                    </div>
                                </div>

                                <div class="address-details">
                                    <%= addr.fullAddress %><br>
                                        <%= addr.district %>, <%= addr.city %>, <%= addr.state %><br>
                                                    <%= addr.pincode %><br>
                                                        <%= addr.email %><br>
                                                            <%= addr.phone %>
                                </div>

                                <div class="address-actions">
                                    <% if (addr.isDefault) { %>
                                        <span class="default-badge">Default</span>
                                        <% } else { %>
                                            <span></span>
                                            <% } %>

                                                <div class="address-buttons">
                                                    <button class="edit-btn"
                                                        onclick="editAddress('<%= doc._id %>', '<%= addr._id %>')">
                                                        <svg class="edit-icon" fill="currentColor" viewBox="0 0 20 20">
                                                            <path
                                                                d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                                                        </svg>
                                                    </button>
                                                    <button class="delete-btn"
                                                        onclick="deleteAddress('<%= doc._id %>', '<%= addr._id %>')">DELETE</button>
                                                </div>
                                </div>
                            </div>
                            <% }) %>
                                <% }); %>
                                    <% } else { %>
                                        <div
                                            style="grid-column: 1 / -1; text-align: center; color: #6c757d; padding: 40px;">
                                            No addresses found. Add your first delivery address.
                                        </div>
                                        <% } %>
            </div>


            <div class="add-address-section">
                <% if (addresses && addresses[0] && addresses[0].address.length < 4) { %>
                    <a href="/profile/address/add" class="add-address-btn">Add New Address</a>
                    <% } %>
            </div>
        </div>
    </div>
</div>

<script>
    function editAddress(docId, addrId) {
        window.location.href = `/profile/address/edit/${addrId}`;
    }

    async function deleteAddress(docId, addrId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "This address will be deleted permanently.",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'Cancel'
        }).then(async (result) => {
            if (result.isConfirmed) {
                try {
                    await axios.delete(`/profile/address/${addrId}`);

                    Swal.fire({
                        title: 'Deleted!',
                        text: 'Your address has been deleted.',
                        icon: 'success',
                        timer: 1500,
                        showConfirmButton: false
                    });

                    // Reload after short delay
                    setTimeout(() => window.location.reload(), 1500);

                } catch (error) {
                    console.error('Error deleting address:', error);
                    Swal.fire({
                        title: 'Error!',
                        text: 'Failed to delete address. Please try again.',
                        icon: 'error',
                        confirmButtonText: 'OK'
                    });
                }
            }
        });
    }

</script>