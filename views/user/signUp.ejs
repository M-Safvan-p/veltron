<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Sign Up</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="../../styles/user/signUp.css" />
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body>
    <div class="signup-container">
        <h2 class="text-center">Sign up</h2>

        <form id="signUpForm">
            <!-- Full Name -->
            <div class="mb-2">
                <label for="fullName" class="form-label">Full name</label>
                <input type="text" class="form-control" id="fullName" placeholder="Enter your full name" />
            </div>

            <!-- Email -->
            <div class="mb-2">
                <label for="email" class="form-label">Email</label>
                <input type="text" class="form-control" id="email" placeholder="Enter your email" />
            </div>

            <!-- Mobile Number -->
            <div class="mb-2">
                <label for="phoneNumber" class="form-label">Mobile Number</label>
                <input type="tel" class="form-control" id="phoneNumber" placeholder="Enter your mobile number" />
            </div>

            <!-- Password -->
            <div class="mb-2">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" value="@Safvan9633"
                    placeholder="Enter your password" />
            </div>

            <!-- Confirm Password -->
            <div class="mb-2">
                <label for="confirmPassword" class="form-label">Confirm password</label>
                <input type="password" class="form-control" id="confirmPassword" value="@Safvan9633"
                    placeholder="Confirm your password" />
            </div>

            <!-- Referral Code -->
            <div class="mb-2">
                <label for="refferalCode" class="form-label">Referral Code (optional)</label>
                <input type="text" class="form-control" id="refferalCode" placeholder="Enter referral code" />
            </div>

            <!-- Already have an account -->
            <div class="text-center mb-2">
                <span class="text-muted" style="font-size: 0.8rem">Already have an account?</span>
                <a href="/logIn" class="login-link">Log in</a>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary mb-3">Sign Up</button>
        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- axios -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <!-- validation script  -->
    <script src="/js/utils/formValidator.js"></script>

    <script>

        document.getElementById("signUpForm").addEventListener("submit", async function (e) {
            e.preventDefault();

            const fullName = document.getElementById("fullName").value;
            const email = document.getElementById("email").value;
            const phoneNumber = document.getElementById("phoneNumber").value;
            const password = document.getElementById("password").value;
            const confirmPassword = document.getElementById("confirmPassword").value;
            const refferalCode = document.getElementById("refferalCode").value;

            // Frontend validation
            const { isValid, messages } = validateSignUpForm(fullName, email, phoneNumber, password, confirmPassword);
            if (!isValid) {
                Swal.fire({
                    icon: 'error',
                    title: 'Validation Error',
                    html: messages.join('<br>'),
                    customClass: {
                        confirmButton: "swal-confirm-black"
                    }
                });
                return;
            }

            try {
                const response = await axios.post("/signUp", {
                    fullName,
                    email,
                    phoneNumber,
                    password,
                    confirmPassword,
                    refferalCode
                });

                const result = response.data;
                if (result.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Signup Successful',
                        text: 'Redirecting...',
                        timer: 1500,
                        showConfirmButton: false,
                        customClass: { confirmButton: "swal-confirm-black" }
                    }).then(() => {
                        window.location.href = result.redirect;
                    });
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: error.response?.data?.message || "Something went wrong"
                });
            }
        });
    </script>
</body>

</html>