<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Sign Up</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="../../styles/user/signUp.css" />
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body>
    <div class="signup-container">
        <h2 class="text-center">Sign up</h2>

        <form id="signUpForm">
            <!-- Full Name -->
            <div class="mb-2">
                <label for="fullName" class="form-label">Full name</label>
                <input type="text" class="form-control" id="fullName" placeholder="Enter your full name" />
            </div>

            <!-- Email -->
            <div class="mb-2">
                <label for="email" class="form-label">Email</label>
                <input type="text" class="form-control" id="email" placeholder="Enter your email" />
            </div>

            <!-- Mobile Number -->
            <div class="mb-2">
                <label for="phoneNumber" class="form-label">Mobile Number</label>
                <input type="tel" class="form-control" id="phoneNumber" placeholder="Enter your mobile number" />
            </div>

            <!-- Password -->
            <div class="mb-2">
                <label for="password" class="form-label">Password</label>
                <div class="position-relative">
                    <input type="password" class="form-control" id="password"
                        placeholder="Enter your password" style="padding-right: 40px;" />
                    <span class="position-absolute" id="togglePassword" 
                          style="right: 10px; top: 50%; transform: translateY(-50%); cursor: pointer; user-select: none;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                            <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                        </svg>
                    </span>
                </div>
            </div>

            <!-- Confirm Password -->
            <div class="mb-2">
                <label for="confirmPassword" class="form-label">Confirm password</label>
                <div class="position-relative">
                    <input type="password" class="form-control" id="confirmPassword" 
                        placeholder="Confirm your password" style="padding-right: 40px;" />
                    <span class="position-absolute" id="toggleConfirmPassword" 
                          style="right: 10px; top: 50%; transform: translateY(-50%); cursor: pointer; user-select: none;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                            <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                        </svg>
                    </span>
                </div>
            </div>

            <!-- Referral Code -->
            <div class="mb-2">
                <label for="refferalCode" class="form-label">Referral Code (optional)</label>
                <input type="text" class="form-control" id="refferalCode" placeholder="Enter referral code" />
            </div>

            <!-- Already have an account -->
            <div class="text-center mb-2">
                <span class="text-muted" style="font-size: 0.8rem">Already have an account?</span>
                <a href="/logIn" class="login-link">Log in</a>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary mb-3">Sign Up</button>
        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- axios -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <!-- validation script  -->
    <script src="/js/utils/formValidator.js"></script>

    <script>
        // Password toggle functionality
        document.addEventListener("DOMContentLoaded", () => {
            const eyeOpenSVG = '<path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/><path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>';
            const eyeClosedSVG = '<path d="M13.359 11.238C15.06 9.72 16 8 16 8s-3-5.5-8-5.5a7.028 7.028 0 0 0-2.79.588l.77.771A5.944 5.944 0 0 1 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.134 13.134 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755-.165.165-.337.328-.517.486l.708.709z"/><path d="M11.297 9.176a3.5 3.5 0 0 0-4.474-4.474l.823.823a2.5 2.5 0 0 1 2.829 2.829l.822.822zm-2.943 1.299.822.822a3.5 3.5 0 0 1-4.474-4.474l.823.823a2.5 2.5 0 0 0 2.829 2.829z"/><path d="M3.35 5.47c-.18.16-.353.322-.518.487A13.134 13.134 0 0 0 1.172 8l.195.288c.335.48.83 1.12 1.465 1.755C4.121 11.332 5.881 12.5 8 12.5c.716 0 1.39-.133 2.02-.36l.77.772A7.029 7.029 0 0 1 8 13.5C3 13.5 0 8 0 8s.939-1.721 2.641-3.238l.708.709zm10.296 8.884-12-12 .708-.708 12 12-.708.708z"/>';

            // Toggle for password field
            const togglePassword = document.getElementById("togglePassword");
            const passwordInput = document.getElementById("password");
            
            togglePassword.addEventListener("click", function () {
                const svg = this.querySelector("svg");
                if (passwordInput.type === "password") {
                    passwordInput.type = "text";
                    svg.innerHTML = eyeClosedSVG;
                } else {
                    passwordInput.type = "password";
                    svg.innerHTML = eyeOpenSVG;
                }
            });

            // Toggle for confirm password field
            const toggleConfirmPassword = document.getElementById("toggleConfirmPassword");
            const confirmPasswordInput = document.getElementById("confirmPassword");
            
            toggleConfirmPassword.addEventListener("click", function () {
                const svg = this.querySelector("svg");
                if (confirmPasswordInput.type === "password") {
                    confirmPasswordInput.type = "text";
                    svg.innerHTML = eyeClosedSVG;
                } else {
                    confirmPasswordInput.type = "password";
                    svg.innerHTML = eyeOpenSVG;
                }
            });
        });

        document.getElementById("signUpForm").addEventListener("submit", async function (e) {
            e.preventDefault();

            const signUpButton = this.querySelector("button[type='submit']");
            signUpButton.disabled = true;
            signUpButton.innerText = "Signing up..."; 

            const fullName = document.getElementById("fullName").value;
            const email = document.getElementById("email").value;
            const phoneNumber = document.getElementById("phoneNumber").value;
            const password = document.getElementById("password").value;
            const confirmPassword = document.getElementById("confirmPassword").value;
            const refferalCode = document.getElementById("refferalCode").value;

            // Frontend validation
            const { isValid, messages } = validateSignUpForm(fullName, email, phoneNumber, password, confirmPassword);
            if (!isValid) {
                Swal.fire({
                    icon: 'error',
                    title: 'Validation Error',
                    html: messages.join('<br>'),
                    customClass: { confirmButton: "swal-confirm-black" }
                });
                signUpButton.disabled = false;
                signUpButton.innerText = "Sign Up"; 
                return;
            }

            try {
                const response = await axios.post("/signUp", {
                    fullName,
                    email,
                    phoneNumber,
                    password,
                    confirmPassword,
                    refferalCode
                });

                const result = response.data;
                if (result.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Signup Successful',
                        text: 'Redirecting...',
                        timer: 1500,
                        showConfirmButton: false,
                        customClass: { confirmButton: "swal-confirm-black" }
                    }).then(() => {
                        window.location.href = result.redirect;
                    });
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: error.response?.data?.message || "Something went wrong"
                });
            } finally {
                signUpButton.disabled = false;
                signUpButton.innerText = "Sign Up";
            }
        });
    </script>

</body>

</html>